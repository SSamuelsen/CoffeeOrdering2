@model StephenJoshFinalProject.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="background">


    <div class="container">
        <div class="row">
            <div class="col-lg-12" style="text-align:center; color:whitesmoke; font-family:Helvetica; font-size: 24px; font-weight: bold; ">
                <h2>Welcome to Rinnova Online Ordering</h2>
            </div>
        </div>

    </div>


    <div class="row center-block">
        <div class="col-md-2 col-md-offset-5">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label" style="color:whitesmoke"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label" style="color:whitesmoke"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group col-md-2 col-md-offset-2">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>
</div>