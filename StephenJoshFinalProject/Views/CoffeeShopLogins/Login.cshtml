@model StephenJoshFinalProject.ViewModels.CoffeeShopLoginViewModel
@{
    ViewData["Title"] = "Home Page";
}

<button class="btn btn-default btn-sm" type="button" onclick="location.href='@Url.Action("Index", "Home")'">
    <span class="glyphicon glyphicon-arrow-left"></span>Go Back
</button>


<h2>Login</h2>

<div class="row center-block">
    <div class="col-md-2 col-md-offset-5">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <label asp-for="StoreCode" class="control-label" style="color:whitesmoke"></label>Store Code
                <input asp-for="StoreCode" class="form-control" />
                <span asp-validation-for="StoreCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label" style="color:whitesmoke"></label>Password
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group col-md-2 col-md-offset-2">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>
